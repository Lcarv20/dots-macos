  "terminal": {
    "font_size": 14,
    "font_family": "CaskaydiaCove Nerd Font",
    "line_height": { "custom": 1.2 },
    "font_weight": 500
  },

  // ‚öôÔ∏è vim settings
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },

  // üìà Diagnostics
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  // üé® font settings
  // "ui_font_family": "CaskaydiaCove Nerd Font",
  // "buffer_line_height": { "custom": 1.4 },
  "buffer_font_family": "FantasqueSansMono Nerd Font Mono",
  "buffer_font_size": 14.0,

  // disable cursor blink
  "cursor_blink": false,
  // "cursor_shape": "hollow",

  // use relative line numbers
  "relative_line_numbers": "wrapped",

  // hide the scroll bar
  "scrollbar": {
    // "show": "never"
    "git_diff": false
  },
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "vscode-css-language-server": {
      "settings": {
        "css": {
