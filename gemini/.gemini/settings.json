{
  "mcpServers": {
    "context7": {
      "httpUrl": "https://mcp.context7.com/mcp"
    },
    "Astro docs": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.docs.astro.build/mcp"
      ]
    },
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer $GITHUB_PAT"
      }
    },
    "convex": {
      "command": "npx",
      "args": [
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ]
    }
  },
  "ui": {
    "showLineNumbers": true,
    "showCitations": true,
    "customThemes": {
      "lcarv": {
        "name": "lcarv",
        "type": "custom",
        "Background": "#262626",
        "Foreground": "#ffecb1",
        "LightBlue": "#ffd489",
        "AccentBlue": "#ff8c69",
        "AccentPurple": "#ff7044",
        "AccentCyan": "#fec28d",
        "AccentGreen": "#ffe79f",
        "AccentYellow": "#ffce86",
        "AccentRed": "#ff662e",
        "Gray": "#d0a46a",
        "Comment": "#bdb54d",
        "DiffAdded": "#12331b",
        "DiffRemoved": "#422219",
        "DiffModified": "#caaf00"
      }
    },
    "theme": "lcarv"
  },
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "preferredEditor": "mvim",
    "vimMode": true
  },
  "ide": {
    "enabled": true
  },
  "tools": {
    "sandbox": false,
    "shell": {
      "showColor": true
    }
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "privacy": {
    "usageStatisticsEnabled": true
  }
}